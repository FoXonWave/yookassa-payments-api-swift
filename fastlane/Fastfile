default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  lane :build do
    xcodebuild(
      clean: true,
      build: true,
      scheme: "YCPaymentsApiExampleFull",
      workspace: "YandexCheckoutPaymentsApi.xcworkspace",
      xcargs: "CODE_SIGNING_ALLOWED=NO"
    )
  end
end
